package atividades;
import java.util.Scanner;
public class Atividades {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int matricula;
        double nota1, nota2, nota3, media;
        
        System.out.println("Informe a matrícula e as três notas do aluno (ou matrícula negativa para sair):");
        matricula = sc.nextInt();
        
        while (matricula >= 0) {
            nota1 = sc.nextDouble();
            nota2 = sc.nextDouble();
            nota3 = sc.nextDouble();
            
            media = (nota1 + nota2 + nota3) / 3;
            
            if (media >= 70) {
                System.out.println("Aluno aprovado.");
            } else if (media >= 60) {
                System.out.println("Aluno em exame.");
            } else {
                System.out.println("Aluno reprovado.");
            }
            
            System.out.println("\nInforme a matrícula e as três notas do aluno (ou matrícula negativa para sair):");
            matricula = sc.nextInt();
        }
        
        System.out.println("Programa encerrado.");
        sc.close();
    }
}
    
