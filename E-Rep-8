
package atividades;
import java.util.Scanner;
public class Atividades {
    public static void main(String[] args) {
 Scanner input = new Scanner(System.in);

        int quantidadePessoasComMaisDe90kg = 0;
        int somaIdades = 0;

        for (int i = 1; i <= 7; i++) {
            System.out.println("Informe a idade da " + i + "ª pessoa:");
            int idade = input.nextInt();

            System.out.println("Informe o peso da " + i + "ª pessoa:");
            double peso = input.nextDouble();

            if (peso > 90) {
                quantidadePessoasComMaisDe90kg++;
            }

            somaIdades += idade;
        }

        double mediaIdades = somaIdades / 7.0;

        System.out.println("Quantidade de pessoas com mais de 90 kg: " + quantidadePessoasComMaisDe90kg);
        System.out.println("Média das idades das sete pessoas: " + mediaIdades);
    }
}
